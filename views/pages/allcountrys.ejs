<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <% countries.forEach(element => { %>

        <p><%=element.country%> </p>
        <p><%=element.totalconfirmed%> </p>
        <p><%=element.totaldeaths%> </p>
        <p><%=element.totalrecovered%> </p>
        <p><%=element.dates%> </p>

        <form action="/addtomyrecords" method="POST">
            <input type="hidden" name="country" value="<%=element.country%>">
            <input type="hidden" name="totalconfirmed" value="<%=element.totalconfirme %>">
            <input type="hidden" name="totaldeaths" value="<%=element.totaldeaths %>">
            <input type="hidden" name="totalrecovered" value="<%=element.totalrecovere %>">
            <input type="hidden" name="dates" value="<%=element.dates %>">
            <input type="submit" value="Add to My Records">
        </form>
  
     
    <% }) %>
</body>
</html>

